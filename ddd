select * from V_SIF_COBROS_PENDIENTES where (1=1 )and(((x.FECHA_COBRO_LIBRA=to_date('24/07/2007' , 'dd/MM/yyyy'))and(x.SISTEMA_COBRO='LIB' ))or((x.FECHA_COBRO_SAC=to_date('24/07/2007' , 'dd/MM/yyyy'))and(x.SISTEMA_COBRO='SAC' )))and(x.PERIODICIDAD_COBRO='EVE' ) order by  x.ID_CLIENTE , x.ID_NEGOCIO , x.ID_MONEDA_COBRO , x.SISTEMA_COBRO , x.TIPO_DOCUMENTO , x.FECHA_CALCULO , x.FECHA_DATOS